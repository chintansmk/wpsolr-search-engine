<script>

    jQuery(document).ready(function () {

        // Global object used by one widget
        wpsolr_sorts["{{ ui_id }}"] = new WPSOLR_Sorts("{{ group_id }}");

        jQuery(".{{ group_id }}").on("change", function (event) {

            wpsolr_sorts["{{ ui_id }}"].clear(); // clear all Sorts
            wpsolr_sorts["{{ ui_id }}"].addValue(jQuery(this).val());
            wpsolr_sorts["{{ ui_id }}"].create_url((window.wpsolr_facets) ? wpsolr_facets.get_parameter_group_id() : {});
        });

    });

</script>

