<script>
    jQuery(document).ready(function () {

        // Init facets
        jQuery(".wpsolr_any_facet_class li .{{ facet_selector_class }} :selected").each(function () {

            var facet = jQuery(this).data("wpsolr-facet-item-value"); // facet value stored in html5 data
            if (facet.facet_value !== "") {
                wpsolr_components["{{ ui_id }}"].addFacetValue(facet); // add facet to facets
            }
        });

        jQuery(".wpsolr_any_facet_class li .{{ facet_selector_class }}").on("change", function (event) {

            {# Update url #}
            var facet = jQuery(this).children("option:selected").data("wpsolr-facet-item-value"); // facet value stored in html5 data

            wpsolr_components["{{ ui_id }}"].removeFacetValue({"facet_id": facet.facet_id}); // Remove all elements of the facet

            if (facet.facet_value !== "") {
                wpsolr_components["{{ ui_id }}"].addFacetValue(facet); // add facet element if selected
            }

            wpsolr_components["{{ ui_id }}"].updateLastFacetSelected(facet); // Add current selection to url
            wpsolr_components["{{ ui_id }}"].create_url(facet.facet_delay_in_ms);

        });

    });
</script>
