<script>

    // Create a global WPSOLR facets object
    jQuery(document).ready(function () {

        // Global object used by one widget
        wpsolr_facets["{{ ui_id }}"] = new WPSOLR_Facets();

        wpsolr_facets["{{ ui_id }}"].set_groups_facet_id("{{ group_id }}");
        wpsolr_facets["{{ ui_id }}"].set_ui_id("{{ ui_id }}");

        jQuery(".{{ ui_id }} .wpsolr_remove_facets").on("click", function (event) {

            wpsolr_facets["{{ ui_id }}"].clear(); // clear all facets
            wpsolr_facets["{{ ui_id }}"].create_url();
        });

    });

</script>
