<script>

    // Create a global WPSOLR facets object
    jQuery(document).ready(function () {

        // Global object used by one widget
        wpsolr_components["{{ ui_id }}"] = new WPSOLR_Facets();

        wpsolr_components["{{ ui_id }}"].set_groups_facet_id("{{ group_id }}");
        wpsolr_components["{{ ui_id }}"].set_ui_id("{{ ui_id }}");
        wpsolr_components["{{ ui_id }}"].set_query_page("{{ query_page }}");
        wpsolr_components["{{ ui_id }}"].set_query_parameter_name("{{ query_parameter_name }}");
        wpsolr_components["{{ ui_id }}"].set_is_debug_js({{ is_debug_js }});
        wpsolr_components["{{ ui_id }}"].set_is_ajax({{ is_ajax }});
        wpsolr_components["{{ ui_id }}"].set_is_own_ajax({{ is_own_ajax }});

        jQuery(".{{ ui_id }} .wpsolr_remove_facets").on("click", function (event) {

            {# Update url #}
            wpsolr_components["{{ ui_id }}"].clear(); // clear all facets
            wpsolr_components["{{ ui_id }}"].create_url(0);
        });

    });

</script>
