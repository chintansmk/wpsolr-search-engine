<script>
    jQuery(document).ready(function () {

        // Init facets
        jQuery(".wpsolr_any_facet_class li .{{ facet_selector_class }}.checked").each(function () {
            var facet = jQuery(this).data("wpsolr-facet-item-value"); // facet value stored in html5 data
            wpsolr_facets.addFacetValue(facet); // add facet to facets
        });

        jQuery(".wpsolr_any_facet_class li .{{ facet_selector_class }}").on("click", function (event) {

            jQuery(".wpsolr_any_facet_class li .{{ facet_selector_class }}").not(this).removeClass("{{ facet_selected_class }}"); // Deactivate all facets, except current
            jQuery(this).toggleClass("{{ facet_selected_class }}"); // Activate clicked facet

            var facet = jQuery(this).data("wpsolr-facet-item-value"); // facet value stored in html5 data
            wpsolr_facets.removeFacetValue({"facet_id": facet.facet_id}); // Remove all elements of the facet
            if (jQuery(this).hasClass("{{ facet_selected_class }}")) {
                wpsolr_facets.addFacetValue(facet); // add facet element if selected
            }
            wpsolr_facets.create_url(); // Generate new url and redirect
        });
    });
</script>
