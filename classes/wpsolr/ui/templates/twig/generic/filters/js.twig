<script>

    // Create a global WPSOLR facets object
    jQuery(document).ready(function () {

        // Global object used by one widget
        wpsolr_facets["{{ ui_id }}"] = new WPSOLR_Facets();

        wpsolr_facets["{{ ui_id }}"].set_groups_facet_id("{{ group_id }}");
        wpsolr_facets["{{ ui_id }}"].set_ui_id("{{ ui_id }}");
        wpsolr_facets["{{ ui_id }}"].set_query_page("{{ query_page }}");
        wpsolr_facets["{{ ui_id }}"].set_query_parameter_name("{{ query_parameter_name }}");
        wpsolr_facets["{{ ui_id }}"].set_is_debug_js({{ is_debug_js }});

    });

</script>
