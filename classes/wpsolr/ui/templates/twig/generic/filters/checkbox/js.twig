<script>
    jQuery(document).ready(function () {

        // Init facets
        jQuery(".{{ ui_id }} li .{{ facet_selector_class }}.checked").each(function () {
            var facet = jQuery(this).data("wpsolr-facet-item-value"); // facet value stored in html5 data
            wpsolr_components["{{ ui_id }}"].addFacetValue(facet); // add facet to facets
        });

        jQuery(".{{ ui_id }} .wpsolr_any_facet_filter_class li .{{ facet_selector_class }}").on("click", function (event) {

            jQuery(this).toggleClass("{{ facet_selected_class }}"); {# check/uncheck clicked facet #}

            {# Update url #}
            var facet = jQuery(this).data("wpsolr-facet-item-value"); // facet value stored in html5 data
            wpsolr_components["{{ ui_id }}"].removeFacetValue(facet); // Remove all elements of the facet
            wpsolr_components["{{ ui_id }}"].updateLastFacetSelected(facet); // Add current selection to url
            wpsolr_components["{{ ui_id }}"].create_url(facet.facet_delay_in_ms);
        });

    });
</script>
